<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="margenSearchViews">
        <item name="android:layout_marginEnd">@dimen/marginAbajo12</item>
        <item name="android:layout_marginStart">@dimen/marginAbajo12</item>
    </style>

    <style name="cardView" parent="margenAbajo.margenArriba">
        <item name="android:layout_marginBottom">@dimen/marginAbajo12</item>
        <item name="android:layout_marginLeft">@dimen/marginLados</item>
        <item name="android:layout_marginRight">@dimen/marginLados</item>
    </style>

    <style name="margenAbajo">
        <item name="android:layout_marginBottom">@dimen/marginAbajo12</item>
    </style>

    <style name="margenAbajo.margenArriba">
        <item name="android:layout_marginTop">@dimen/marginAbajo12</item>
    </style>

    <style name="tv24">
        <item name="android:textSize">@dimen/textviews24</item>
    </style>

    <style name="tvLogo">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/tvLogin</item>
    </style>

    <style name="fotoRound" parent="@style/imageView">
        <item name="android:foreground">@drawable/rounded_shape</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="imageView" parent="Theme.MaterialComponents.Light">
        <item name="android:layout_margin">@dimen/imgMargin</item>
    </style>

    <style name="buttonCrear" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/buttonCornerRadius</item>
    </style>

    <style name="tvLogoLandscape">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/tvLoginLandscape</item>
    </style>
</resources>
